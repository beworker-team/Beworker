<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:padding="16dp"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_deconnxion">

        <TextView
            android:layout_width="wrap_content"
            android:textColor="@color/colorWhite"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:textAlignment="center"
            android:textSize="32dp"
            android:text="vous voulez vraiment vous deconnecter ?"
            android:layout_alignTop="@id/separator_deconnexion"/>

        <View
            android:id="@+id/separator_deconnexion"
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorWhite"
            android:layout_above="@id/bouton_non"
            android:layout_marginBottom="8dp"/>

        <Button
            android:id="@+id/bouton_oui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/oui"
            android:textColor="@color/colorWhite"
            android:background="@color/colorAccent"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true" />

        <Button
            android:id="@+id/bouton_non"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/non"
            android:textColor="@color/colorWhite"
            android:layout_alignParentBottom="true"
            android:background="@color/colorAccent" />

    </RelativeLayout>


</RelativeLayout>