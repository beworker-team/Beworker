<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintlayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:theme="@style/AppTheme.AppBarOverlay">

            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="?attr/colorPrimaryDark">

                <ImageView
                    android:id="@+id/return_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="30dp"
                    android:src="@drawable/ic_keyboard_backspace_black_24dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/action_inscription"
                    android:textColor="@color/colorWhite"
                    android:textSize="18sp"/>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.AppBarLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/page1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_person_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:text="VOTRE PROFIL"
                            android:textColor="#000"
                            android:textSize="16dp" />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@drawable/rectange"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:padding="12dp">

                            <ImageButton
                                android:id="@+id/photo_profil"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:background="#fff"
                                android:src="@drawable/ic_account_circle_black2_24dp"/>

                            <android.support.design.widget.FloatingActionButton
                                android:id="@+id/fab"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="34dp"
                                android:layout_marginTop="36dp"
                                app:srcCompat="@drawable/ic_camera_alt_black_24dp"
                                tools:ignore="VectorDrawableCompat" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/nom"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Nom *"
                                    android:inputType="textPersonName"


                                    />
                            </android.support.design.widget.TextInputLayout>


                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                >

                                <EditText
                                    android:id="@+id/prenom"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Prenom *"
                                    android:inputType="text"

                                    />
                            </android.support.design.widget.TextInputLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/suivant"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron"
                                    android:src="@drawable/ic_arrow_forward_black_24dp"

                                    />
                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connectez-vous ici"
                                android:textColor="#006db3" />


                        </RelativeLayout>


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="32dp">

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/page2"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_person_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img2"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:text="COMPLETEZ PROFIL"
                            android:textColor="#000"
                            android:textSize="16dp"

                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@drawable/rectange"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                >

                                <EditText
                                    android:id="@+id/age"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Age *"
                                    android:inputType="phone|number"


                                    />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                >

                                <EditText
                                    android:id="@+id/ville"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="ville "
                                    android:inputType="text"


                                    />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="22dp"
                            android:paddingLeft="39dp"

                            >

                            <TextView
                                android:id="@+id/Tsexe"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="sexe:"
                                android:textColor="#000"
                                android:textSize="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/Tsexe"
                                android:paddingLeft="12dp"
                                android:text="*"
                                android:textColor="#B14343" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="76dp"
                                android:paddingTop="2dp">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Masculin"
                                    android:textColor="#000" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="36dp"
                                    android:text="Feminin"
                                    android:textColor="#000"

                                    />

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="196dp"
                                android:paddingTop="-15dp">

                                <RadioGroup
                                    android:id="@+id/radio_group"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">

                                    <RadioButton
                                        android:id="@+id/sexe_masculin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:checked="true" />

                                    <RadioButton
                                        android:id="@+id/sexe_feminin"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content" />

                                </RadioGroup>


                            </RelativeLayout>


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="48dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/suivant2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron"
                                    android:src="@drawable/ic_arrow_forward_black_24dp"

                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/precedant2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron2"
                                    android:src="@drawable/black_24dp"

                                    />
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connectez-vous ici"
                                android:textColor="#006db3" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="32dp">

                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/page3"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_contacts_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img3"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:text="VOS CONTACT"
                            android:textColor="#000"
                            android:textSize="16dp"

                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@drawable/rectange"
                        android:orientation="vertical">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                >

                                <EditText
                                    android:id="@+id/email"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Email *"
                                    android:inputType="textWebEmailAddress"

                                    />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <EditText
                                    android:id="@+id/telephone"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Telephone"
                                    android:inputType="phone" />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"

                                >

                                <EditText
                                    android:id="@+id/adresse"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Adresse"
                                    android:inputType="textPostalAddress"


                                    />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="48dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/suivant3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron"
                                    android:src="@drawable/ic_arrow_forward_black_24dp"

                                    />
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/precedant3"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron2"
                                    android:src="@drawable/black_24dp"

                                    />
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connectez-vous ici"
                                android:textColor="#006db3" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="32dp">

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/page4"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:visibility="gone"

                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1.5"
                        android:gravity="center">

                        <ImageView
                            android:id="@+id/img4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_vpn_key_black_24dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_toRightOf="@+id/img4"
                            android:paddingLeft="5dp"
                            android:paddingTop="2dp"
                            android:text="SECURISEZ VOUS"
                            android:textColor="#000"
                            android:textSize="16dp"

                            />

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="344dp"
                        android:layout_height="0dp"
                        android:layout_gravity="center"
                        android:layout_weight="7"
                        android:background="@drawable/rectange"
                        android:orientation="vertical"
                        android:paddingTop="22dp">


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp"

                            >

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/colorAccent"

                                >

                                <EditText
                                    android:id="@+id/password"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="Password *"
                                    android:inputType="textPassword"

                                    />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="12dp">

                            <android.support.design.widget.TextInputLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:passwordToggleEnabled="true"
                                app:passwordToggleTint="@color/colorAccent">

                                <EditText
                                    android:id="@+id/confirme_password"
                                    android:layout_width="270dp"
                                    android:layout_height="wrap_content"
                                    android:hint="confirmer password"
                                    android:inputType="textPassword" />
                            </android.support.design.widget.TextInputLayout>

                        </RelativeLayout>


                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal"
                            android:paddingTop="98dp"

                            >

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:paddingRight="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/suivant4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron"
                                    android:src="@drawable/ic_arrow_forward_black_24dp"

                                    />

                            </RelativeLayout>

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_alignParentRight="true"
                                android:layout_alignParentBottom="true"
                                android:layout_marginBottom="7dp"
                                android:paddingRight="16dp"
                                android:text="Terminer"
                                android:textColor="#00F77C" />

                            <RelativeLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingLeft="22dp"

                                >

                                <ImageButton
                                    android:id="@+id/precedant4"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:background="@drawable/ron2"
                                    android:src="@drawable/black_24dp"

                                    />
                            </RelativeLayout>

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:paddingBottom="12dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Connectez-vous ici"
                                android:textColor="#006db3" />


                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingRight="32dp">

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>
        </ScrollView>


    </LinearLayout>
</android.support.constraint.ConstraintLayout>