<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailsCvFragment">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Nom :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Prenom :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Adresse :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Tel :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="E-mail :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Date de naissance :"
                        android:layout_marginBottom="16dp"/>
                    <TextView
                        android:textSize="16sp"
                        android:padding="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:text="Nationalite :"
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="8dp">

                    <EditText
                        android:id="@+id/et_nom_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:hint="Nom ..."
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_prenom_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:hint="Prenom ..."
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_adresse_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:hint="Adresse ..."
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_tel_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="number"
                        android:hint="Tel ..."
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_email_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="textEmailAddress"
                        android:hint="E-mail ..."
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_birthday_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:inputType="date"
                        android:hint="JJ-MM-AAAA"
                        android:layout_marginBottom="8dp"/>
                    <EditText
                        android:id="@+id/et_nationalite_detail_frag"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorBlack"
                        android:hint="Nationalite ..."
                        android:layout_marginBottom="8dp"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</FrameLayout>