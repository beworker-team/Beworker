<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.DetailsCvFragment">
    <ScrollView
        android:id="@+id/scroll_view_fragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:paddingLeft="16dp"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingRight="24dp"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="19dp"
                android:layout_marginTop="36dp"
                android:layout_marginBottom="16dp"
                android:text="@string/informations_personnelles"
                android:textColor="@color/colorWhite"
                android:textSize="@dimen/text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/color"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingTop="16dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp"
                    android:paddingBottom="7dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_nom_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/nom"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_prenom_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/prenom"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_adresse_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/adresse"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_tel_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/telephone"
                            android:inputType="number" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_email_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/email"
                            android:inputType="textEmailAddress" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="7dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_birthday_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/date_de_naissance"
                            android:inputType="date" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:gravity="center"
                    android:paddingBottom="40dp"
                    android:paddingRight="24dp"
                    android:paddingLeft="24dp">

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/et_nationalite_detail_frag"
                            android:layout_width="270dp"
                            android:layout_height="wrap_content"
                            android:hint="@string/nationalite"
                            android:inputType="text" />
                    </android.support.design.widget.TextInputLayout>
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</FrameLayout>