<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainActivity"
    tools:showIn="@layout/app_bar_main_offline">

    <RelativeLayout
        android:id="@+id/waitin_offline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">
        <ProgressBar
            android:id="@+id/pb_waiting"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/chargemet_de_offres"
            android:layout_above="@id/pb_waiting"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="21sp"
            android:layout_margin="56dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/refresh_offline"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        tools:ignore="MissingConstraints">
        <ImageView
            android:id="@+id/iv_refresh_offline"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_refresh"
            android:layout_above="@id/rv"
            android:clickable="true"
            android:onClick="refreshOffLine"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Reesayer "
            android:id="@+id/rv"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="14sp"
            android:layout_margin="26dp"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_margin="4dp"
        android:id="@+id/recycle_view_off_line_mode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints">

    </android.support.v7.widget.RecyclerView>

</android.support.constraint.ConstraintLayout>