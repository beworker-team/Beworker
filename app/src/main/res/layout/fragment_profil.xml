<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="8dp">


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="6"
                android:padding="12dp"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:src="@drawable/ic_account_circle_black_74dp" />

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:padding="23dp">

                        <ImageView
                            android:id="@+id/iv_edit_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/ic_edit_black_24dp"
                            android:padding="4dp"
                            android:layout_alignParentRight="true"/>

                        <LinearLayout
                            android:id="@+id/ll_v_a_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:visibility="gone"
                            android:layout_alignParentRight="true">
                            <ImageView
                                android:id="@+id/iv_cancel_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:layout_marginRight="8dp"
                                android:src="@drawable/ic_clear_red_24dp" />
                            <ImageView
                                android:id="@+id/iv_save_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="4dp"
                                android:src="@drawable/ic_check_green_24dp" />
                        </LinearLayout>
                    </RelativeLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_show_name_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/nde_singe_igor_dybala"
                        android:textColor="@color/colorBlack"
                        android:textSize="15dp" />

                    <EditText
                        android:id="@+id/et_show_name_user"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/nom"
                        android:visibility="gone"/>
                    <EditText
                        android:id="@+id/et_show_prenom_user"
                        android:layout_below="@id/et_show_name_user"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/nom"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_show_birth_day_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="@string/_29_ans"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_show_birth_day_user"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/dateformat"
                        android:inputType="date"
                        android:visibility="gone"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/tv_show_domaine_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingTop="15dp"
                        android:text="@string/medecin_generaliste"
                        android:textColor="@color/colorBlack"
                        android:textSize="13dp" />

                    <EditText
                        android:id="@+id/et_show_domaine_user"
                        android:layout_width="120dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/domaine"
                        android:visibility="gone"/>

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="23dp">

                    <ImageView
                        android:id="@+id/iv_edit_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp" />

                    <LinearLayout
                        android:id="@+id/ll_v_a_contact"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/iv_cancel_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_clear_red_24dp" />
                        <ImageView
                            android:id="@+id/iv_save_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/ic_check_green_24dp" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:text="@string/contacts"
                            android:textColor="@color/colorBlack"
                            android:textSize="17dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="233dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorPrimary"></RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/emaile"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_show_email_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/igorndesigne_gmail_com"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_show_email_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/emaile"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/telephone"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_show_tel_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/_237656363919"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_show_tel_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/telephone"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/adresseprofil"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_adresse_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/igorndesigne_gmail_com"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_adresse_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/adresseprofil"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:layout_marginBottom="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/ville"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_show_city_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/yaound_cameroun"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <EditText
                                android:id="@+id/et_show_city_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/ville"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="23dp">

                    <ImageView
                        android:id="@+id/iv_edit_supp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp" />

                    <LinearLayout
                        android:id="@+id/ll_v_a_supp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/iv_cancel_supp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_clear_red_24dp" />
                        <ImageView
                            android:id="@+id/iv_save_supp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/ic_check_green_24dp" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:text="@string/supplementaires"
                            android:textColor="@color/colorBlack"
                            android:textSize="17dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="233dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorPrimary"></RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/statutprofil"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_statut_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="statutprofil"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_statut_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/statut"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp"
                        android:layout_marginBottom="16dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/sexeprofil"
                                android:textColor="@color/colorBlack"
                                android:textSize="15dp" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_genre_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/yaound_cameroun"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="13dp" />

                            <RadioGroup
                                android:id="@+id/rg_genre_city_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:visibility="gone">
                                <RadioButton
                                    android:id="@+id/rb_genre_M_user"
                                    android:checked="true"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="M"
                                    android:layout_marginRight="12dp"/>
                                <RadioButton
                                    android:id="@+id/rb_genre_F_user"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="F"/>
                            </RadioGroup>

                        </RelativeLayout>

                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:padding="23dp">

                    <ImageView
                        android:id="@+id/iv_edit_pw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_edit_black_24dp" />

                    <LinearLayout
                        android:id="@+id/ll_v_a_pw"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_alignParentRight="true">
                        <ImageView
                            android:id="@+id/iv_cancel_pw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:layout_marginRight="8dp"
                            android:src="@drawable/ic_clear_red_24dp" />
                        <ImageView
                            android:id="@+id/iv_save_pw"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="4dp"
                            android:src="@drawable/ic_check_green_24dp" />
                    </LinearLayout>

                </RelativeLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:padding="12dp"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="12dp"
                        android:paddingTop="2dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="15dp"
                            android:text="Mot de passe"
                            android:textColor="@color/colorBlack"
                            android:textSize="17dp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="233dp"
                        android:layout_height="1dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="12dp"
                        android:background="@color/colorPrimary">

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingLeft="12dp">

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1.3">


                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="3">

                            <TextView
                                android:id="@+id/tv_pw_email_user"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingTop="15dp"
                                android:text="@string/maskpw"
                                android:textColor="@color/colorPrimaryDark"
                                android:textSize="15dp" />

                            <EditText
                                android:id="@+id/et_pw_email_user"
                                android:layout_width="120dp"
                                android:layout_height="wrap_content"
                                android:hint="@string/maskpw"
                                android:visibility="gone"/>

                        </RelativeLayout>

                    </LinearLayout>


                </LinearLayout>
            </RelativeLayout>

        </android.support.v7.widget.CardView>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>